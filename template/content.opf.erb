<?xml version="1.0" encoding="UTF-8"?>
<package xmlns="http://www.idpf.org/2007/opf" version="2.0" unique-identifier="BookID">
 <metadata xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:opf="http://www.idpf.org/2007/opf">
  <dc:language>ja</dc:language>
  <dc:identifier id="BookID" opf:scheme="UUID">urn:uuid:<%= @uuid %></dc:identifier>
  <dc:title><%= @title %></dc:title>
  <dc:creator opf:role="aut"><%= @author %></dc:creator>
  <dc:publisher><%= @publisher %></dc:publisher>
  <dc:date opf:event="publication"><%= Time.now.strftime("%Y-%m-%d") %></dc:date>
 </metadata>
 <manifest>
  <item id="ncx" href="toc.ncx" media-type="application/x-dtbncx+xml"/>
  <%- @items.each { |item| -%>
  <item id="<%= item[:id] %>" href="<%= item[:href] %>" media-type="<%= item[:type] %>"/>
  <%- } -%>
 </manifest>
 <spine toc="ncx">
  <%- @itemrefs.each { |itemref| -%>
  <itemref idref="<%= itemref[:idref] %>"/>
  <%- } -%>
 </spine>
</package>
